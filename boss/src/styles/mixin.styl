bg($bgone,$bgtwo,$bgthree,$opacity){
	background:rgba($bgone,$bgtwo,$bgthree,$opacity);
}

// 背景图片地址和大小
bis($url) {
	background-image: url($url);
	background-repeat: no-repeat;
	background-size: 100% 100%;
}

borderRadius($radius) {
    -webkit-border-radius: $radius;
    -moz-border-radius: $radius;
    -ms-border-radius: $radius;
    -o-border-radius: $radius;
    border-radius: $radius;
}
//定位全屏
allcover(){
	position:absolute;
	top:0;
	right:0;
}

//定位上下左右居中
center(){
	position: absolute;
	top: 50%;
	left: 50%;
	transform: translate(-50%, -50%);
}

//定位上下居中
ct() {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
}

//定位上下居中
cl() {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
}

//宽高
wh($width, $height){
	width: $width;
	height: $height;
}

